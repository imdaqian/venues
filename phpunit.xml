<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="test/bootstrap.php"
    syntaxCheck="true"
    stopOnFailure="false"
    backupStaticAttributes="true">
    <logging>
        <!-- Test results -->
        <log type="testdox-html" target="build/logs/test/phpunit-testdox.html" />
        <log type="testdox-text" target="build/logs/test/phpunit-testdox.txt" />
        <log type="json" target="build/logs/test/phpunit.json" />
        <log type="junit" target="build/logs/test/phpunit.junit.xml" />
        <log type="story-html" target="build/logs/test/phpunit.story.html" />
        <log type="story-text" target="build/logs/test/phpunit.story.txt" />
        <!-- Coverage -->
        <log type="coverage-html" target="build/logs/coverage/html" />
        <log type="coverage-clover" target="build/logs/coverage/clover.xml" />
    </logging>
</phpunit>
